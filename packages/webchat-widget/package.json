{
  "name": "@clic/webchat-widget",
  "version": "1.0.0",
  "private": true,
  "description": "Embeddable web chat widget for CLIC CRM",
  "main": "dist/webchat-widget.js",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --minify --target=es2020 --outfile=dist/webchat-widget.js --format=iife --global-name=ClicChat",
    "build:dev": "esbuild src/index.ts --bundle --target=es2020 --outfile=dist/webchat-widget.js --format=iife --global-name=ClicChat --sourcemap",
    "watch": "esbuild src/index.ts --bundle --target=es2020 --outfile=dist/webchat-widget.js --format=iife --global-name=ClicChat --sourcemap --watch"
  },
  "devDependencies": {
    "esbuild": "^0.20.0",
    "typescript": "^5.3.3"
  }
}
