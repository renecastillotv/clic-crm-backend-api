---
/**
 * YoutubeChannelShowcase - Secci√≥n de canal de YouTube
 * Muestra el canal con contador de suscriptores y videos destacados
 */

interface Props {
  datos: {
    static_data: {
      titulo: string;
      subtitulo?: string;
      channelId: string;
      channelUrl: string;
      suscriptores: string;
      videosDestacados?: Array<{
        id: string;
        titulo: string;
        thumbnail: string;
      }>;
    };
    toggles?: {
      mostrarContador?: boolean;
      mostrarBotonSuscribir?: boolean;
    };
  };
  tema?: Record<string, string>;
  baseUrl?: string;
}

const { datos, tema = {} } = Astro.props;
const { static_data, toggles = {} } = datos;
const { titulo, subtitulo, channelId, channelUrl, suscriptores, videosDestacados = [] } = static_data;
const { mostrarContador = true, mostrarBotonSuscribir = true } = toggles;

const primaryColor = tema.primary || '#f04e00';
const secondaryColor = tema.secondary || '#1a1a1a';
---

<section class="youtube-channel">
  <div class="container">
    <div class="header">
      <div class="header-content">
        <h2 class="title">{titulo}</h2>
        {subtitulo && <p class="subtitle">{subtitulo}</p>}

        {mostrarContador && (
          <div class="subscriber-count">
            <svg class="youtube-icon" viewBox="0 0 24 24" fill="currentColor">
              <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
            </svg>
            <span class="count">{suscriptores}</span>
            <span class="label">Suscriptores</span>
          </div>
        )}

        {mostrarBotonSuscribir && (
          <a href={channelUrl} target="_blank" rel="noopener noreferrer" class="subscribe-btn">
            Visitar Canal
          </a>
        )}
      </div>
    </div>

    {videosDestacados.length > 0 && (
      <div class="videos-grid">
        {videosDestacados.map((video) => (
          <div class="video-card">
            <div class="video-thumbnail">
              <img src={video.thumbnail} alt={video.titulo} />
              <div class="play-overlay">
                <svg class="play-icon" viewBox="0 0 24 24" fill="white">
                  <path d="M8 5v14l11-7z"/>
                </svg>
              </div>
            </div>
            <h3 class="video-title">{video.titulo}</h3>
          </div>
        ))}
      </div>
    )}
  </div>
</section>

<style define:vars={{ primaryColor, secondaryColor }}>
  .youtube-channel {
    padding: 5rem 0;
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
    color: white;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .header-content {
    max-width: 700px;
    margin: 0 auto;
  }

  .title {
    font-size: 3rem;
    font-weight: 700;
    margin: 0 0 1rem 0;
    background: linear-gradient(135deg, #ff0000 0%, var(--primaryColor) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .subtitle {
    font-size: 1.25rem;
    margin: 0 0 2rem 0;
    opacity: 0.9;
  }

  .subscriber-count {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 2rem;
    padding: 1.5rem;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    backdrop-filter: blur(10px);
  }

  .youtube-icon {
    width: 40px;
    height: 40px;
    color: #ff0000;
  }

  .count {
    font-size: 2.5rem;
    font-weight: 700;
  }

  .label {
    font-size: 1.125rem;
    opacity: 0.8;
  }

  .subscribe-btn {
    display: inline-block;
    padding: 1rem 2.5rem;
    background: #ff0000;
    color: white;
    text-decoration: none;
    border-radius: 8px;
    font-weight: 600;
    font-size: 1.125rem;
    transition: all 0.3s;
    box-shadow: 0 4px 12px rgba(255, 0, 0, 0.3);
  }

  .subscribe-btn:hover {
    background: #cc0000;
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(255, 0, 0, 0.4);
  }

  .videos-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .video-card {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.3s;
    cursor: pointer;
  }

  .video-card:hover {
    transform: translateY(-8px);
    background: rgba(255, 255, 255, 0.1);
  }

  .video-thumbnail {
    position: relative;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background: #000;
  }

  .video-thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .play-overlay {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0, 0, 0, 0.3);
    opacity: 0;
    transition: opacity 0.3s;
  }

  .video-card:hover .play-overlay {
    opacity: 1;
  }

  .play-icon {
    width: 60px;
    height: 60px;
    filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.3));
  }

  .video-title {
    padding: 1.25rem;
    font-size: 1rem;
    font-weight: 600;
    margin: 0;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  @media (max-width: 968px) {
    .videos-grid {
      grid-template-columns: 1fr;
    }

    .title {
      font-size: 2.5rem;
    }

    .count {
      font-size: 2rem;
    }
  }

  @media (max-width: 640px) {
    .youtube-channel {
      padding: 3rem 0;
    }

    .title {
      font-size: 2rem;
    }

    .subtitle {
      font-size: 1rem;
    }

    .subscriber-count {
      flex-direction: column;
      gap: 0.5rem;
      padding: 1rem;
    }

    .youtube-icon {
      width: 32px;
      height: 32px;
    }

    .count {
      font-size: 1.75rem;
    }

    .subscribe-btn {
      width: 100%;
      text-align: center;
    }
  }
</style>
