---
/**
 * TestimonialDetailDefault.astro
 * Pagina de detalle de un testimonio individual
 * Muestra el testimonio completo con propiedad y asesor vinculados
 */

import type { ComponenteDataEstructurado } from '../../types/componentesEstructurado';
import ContentBreadcrumbs from '../breadcrumbs/ContentBreadcrumbs.astro';

interface Props {
  datos: ComponenteDataEstructurado;
  tema?: Record<string, string>;
  baseUrl?: string;
}

const { datos, tema = {}, baseUrl = '' } = Astro.props;

const staticData = datos?.static_data || {};
const dynamicData = datos?.dynamic_data || {};
const styles = datos?.styles || {};

// El assembler devuelve: { primary: testimonio, propiedad: {...}, asesor: {...}, relacionados: [...] }
const resolvedData = dynamicData?.resolved;

// El testimonio puede venir como primary del assembler, como array o como objeto single
let testimonio = resolvedData?.primary || resolvedData || null;
if (Array.isArray(testimonio)) {
  testimonio = testimonio[0] || null;
}

// Datos secundarios del assembler
const propiedadVinculada = resolvedData?.propiedad || null;
const asesorVinculado = resolvedData?.asesor || null;
const testimoniosRelacionados = resolvedData?.relacionados || [];

// Si no hay testimonio resuelto, usar datos estaticos
if (!testimonio) {
  testimonio = staticData.testimonio || {
    cliente_nombre: 'Cliente',
    contenido: 'Excelente servicio, muy recomendado.',
    rating: 5,
  };
}

const nombre = testimonio.cliente_nombre || testimonio.nombre_cliente || testimonio.client_name || 'Cliente';
const contenido = testimonio.contenido || testimonio.testimonio || testimonio.full_testimonial || '';
const rating = testimonio.rating || testimonio.calificacion || 5;
const foto = testimonio.foto_url || testimonio.client_avatar || testimonio.cliente_foto || '';
const cargo = testimonio.cargo || testimonio.cliente_cargo || '';
const empresa = testimonio.empresa || testimonio.cliente_empresa || '';
const ubicacion = testimonio.ubicacion || testimonio.cliente_ubicacion || testimonio.client_location || '';
const categoriaSlug = testimonio.categoria_slug || 'general';
const categoriaNombre = testimonio.categoria_nombre || '';
const fecha = testimonio.fecha || '';
const verificado = testimonio.verificado || testimonio.client_verified || false;
const fuente = testimonio.fuente || '';

// Colores del tema
const primaryColor = tema?.primary || '#667eea';
const secondaryColor = tema?.secondary || '#764ba2';

// Formatear fecha
function formatDate(dateString: string): string {
  if (!dateString) return '';
  try {
    const date = new Date(dateString);
    return date.toLocaleDateString('es-ES', {
      year: 'numeric',
      month: 'long',
      day: 'numeric'
    });
  } catch {
    return dateString;
  }
}

// Generar estrellas
function getStars(rating: number): string {
  return '‚òÖ'.repeat(Math.min(5, Math.max(0, rating || 5)));
}

// Breadcrumbs
const breadcrumbItems = [
  { label: 'Testimonios', href: `${baseUrl}/testimonios` },
  ...(categoriaNombre ? [{ label: categoriaNombre, href: `${baseUrl}/testimonios/${categoriaSlug}` }] : []),
  { label: nombre }
];
---

<!-- Hero con gradiente -->
<section class="testimonial-hero" style={`--primary: ${primaryColor}; --secondary: ${secondaryColor};`}>
  <div class="hero-container">
    <ContentBreadcrumbs items={breadcrumbItems} variant="light" />

    <div class="hero-content">
      <div class="hero-rating">
        <span class="hero-stars">{getStars(rating)}</span>
        <span class="hero-rating-text">{rating}/5</span>
      </div>
      <h1 class="hero-title">{nombre}</h1>
      {(cargo || empresa) && (
        <p class="hero-subtitle">{cargo}{cargo && empresa ? ' en ' : ''}{empresa}</p>
      )}
    </div>
  </div>
</section>

<section class="testimonial-detail" style={`--primary: ${primaryColor}; --secondary: ${secondaryColor};`}>
  <div class="container">
    <!-- Contenido principal -->
    <article class="testimonial-content-wrapper">
      <!-- Rating -->
      <div class="rating-section">
        <div class="stars">{getStars(rating)}</div>
        <span class="rating-text">{rating}/5</span>
      </div>

      <!-- Contenido del testimonio -->
      <blockquote class="testimonial-quote">
        "{contenido}"
      </blockquote>

      <!-- Autor -->
      <div class="testimonial-author">
        <div class="author-photo-wrapper">
          {foto ? (
            <img src={foto} alt={nombre} class="author-photo" />
          ) : (
            <div class="author-photo placeholder">
              <span>{nombre.charAt(0)}</span>
            </div>
          )}
          {verificado && (
            <div class="verified-badge" title="Cliente verificado">
              ‚úì
            </div>
          )}
        </div>

        <div class="author-details">
          <h2 class="author-name">{nombre}</h2>
          {(cargo || empresa) && (
            <p class="author-role">{cargo}{cargo && empresa ? ' en ' : ''}{empresa}</p>
          )}
          {ubicacion && (
            <p class="author-location">{ubicacion}</p>
          )}
        </div>
      </div>

      <!-- Metadatos -->
      <div class="testimonial-meta">
        {fecha && (
          <div class="meta-item">
            <span class="meta-label">Fecha</span>
            <span class="meta-value">{formatDate(fecha)}</span>
          </div>
        )}
        {categoriaNombre && (
          <div class="meta-item">
            <span class="meta-label">Categoria</span>
            <a href={`${baseUrl}/testimonios/${categoriaSlug}`} class="meta-value meta-link">{categoriaNombre}</a>
          </div>
        )}
        {fuente && (
          <div class="meta-item">
            <span class="meta-label">Fuente</span>
            <span class="meta-value">{fuente}</span>
          </div>
        )}
      </div>

      <!-- Acciones -->
      <div class="testimonial-actions">
        <a href={`${baseUrl}/testimonios`} class="btn btn-secondary">Ver todos los testimonios</a>
        <a href={`${baseUrl}/contacto`} class="btn btn-primary">Contactanos</a>
      </div>
    </article>

    <!-- Propiedad vinculada -->
    {propiedadVinculada && (
      <section class="linked-section">
        <h3 class="section-title">üè† Propiedad Relacionada</h3>
        <a href={`${baseUrl}/propiedades/${propiedadVinculada.slug || propiedadVinculada.id}`} class="property-card">
          <div class="property-image">
            {propiedadVinculada.imagen_principal ? (
              <img src={propiedadVinculada.imagen_principal} alt={propiedadVinculada.titulo} loading="lazy" />
            ) : (
              <div class="no-image">üè†</div>
            )}
            {propiedadVinculada.operacion && (
              <span class={`operation-badge ${propiedadVinculada.operacion.toLowerCase()}`}>
                {propiedadVinculada.operacion}
              </span>
            )}
          </div>
          <div class="property-info">
            <h4>{propiedadVinculada.titulo}</h4>
            <p class="property-location">{propiedadVinculada.ciudad || propiedadVinculada.sector || propiedadVinculada.ubicacion}</p>
            {propiedadVinculada.precio && (
              <span class="property-price">
                {new Intl.NumberFormat('es-DO', { style: 'currency', currency: 'USD', maximumFractionDigits: 0 }).format(propiedadVinculada.precio)}
              </span>
            )}
            <div class="property-features">
              {propiedadVinculada.habitaciones && <span>üõèÔ∏è {propiedadVinculada.habitaciones}</span>}
              {propiedadVinculada.banos && <span>üöø {propiedadVinculada.banos}</span>}
              {propiedadVinculada.metros_construidos && <span>üìê {propiedadVinculada.metros_construidos}m¬≤</span>}
            </div>
          </div>
        </a>
      </section>
    )}

    <!-- Asesor vinculado -->
    {asesorVinculado && (
      <section class="linked-section">
        <h3 class="section-title">üë§ Asesor que atendi√≥</h3>
        <a href={`${baseUrl}/asesores/${asesorVinculado.slug}`} class="asesor-card">
          <div class="asesor-avatar">
            {asesorVinculado.foto_url || asesorVinculado.avatar_url ? (
              <img src={asesorVinculado.foto_url || asesorVinculado.avatar_url} alt={asesorVinculado.nombre_completo} />
            ) : (
              <div class="avatar-placeholder">
                {(asesorVinculado.nombre_completo || asesorVinculado.nombre || 'A').charAt(0).toUpperCase()}
              </div>
            )}
          </div>
          <div class="asesor-info">
            <h4>{asesorVinculado.nombre_completo || `${asesorVinculado.nombre} ${asesorVinculado.apellido}`.trim()}</h4>
            {asesorVinculado.cargo && <p class="asesor-cargo">{asesorVinculado.cargo}</p>}
            {asesorVinculado.calificacion_promedio > 0 && (
              <div class="asesor-rating">
                <span class="stars">{'‚òÖ'.repeat(Math.round(asesorVinculado.calificacion_promedio))}</span>
                <span>{Number(asesorVinculado.calificacion_promedio).toFixed(1)}</span>
              </div>
            )}
            <span class="view-profile">Ver perfil completo ‚Üí</span>
          </div>
        </a>
      </section>
    )}

    <!-- Testimonios relacionados -->
    {testimoniosRelacionados.length > 0 && (
      <section class="linked-section">
        <h3 class="section-title">üí¨ Otros testimonios</h3>
        <div class="related-grid">
          {testimoniosRelacionados.map((rel: any) => (
            <a href={`${baseUrl}/testimonios/${rel.categoria_slug || 'general'}/${rel.slug}`} class="related-card">
              <div class="related-rating">
                {'‚òÖ'.repeat(rel.rating || 5)}
              </div>
              <p class="related-content">"{(rel.contenido || rel.testimonio || '').substring(0, 120)}..."</p>
              <div class="related-author">
                <strong>{rel.cliente_nombre || rel.nombre_cliente}</strong>
                {rel.cliente_cargo && <span>{rel.cliente_cargo}</span>}
              </div>
            </a>
          ))}
        </div>
      </section>
    )}
  </div>
</section>

