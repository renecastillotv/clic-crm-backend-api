        </div>

        {/* Biograf√≠a */}
        {asesorData.biografia && (
          <div class="asesor-bio">
            <h2>Sobre m√≠</h2>
            <p>{asesorData.biografia}</p>
          </div>
        )}

        {/* Estad√≠sticas */}
        <div class="asesor-stats">
          <div class="stat-card">
            <span class="stat-value">{asesorData.propiedades_activas}</span>
            <span class="stat-label">Propiedades Activas</span>
          </div>
          {asesorData.propiedades_vendidas > 0 && (
            <div class="stat-card">
              <span class="stat-value">{asesorData.propiedades_vendidas}</span>
              <span class="stat-label">Propiedades Vendidas</span>
            </div>
