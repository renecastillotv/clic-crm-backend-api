            <div class="stat-card">
              <span class="stat-value">{asesorData.num_reviews}</span>
              <span class="stat-label">Rese√±as</span>
            </div>
          )}
        </div>

        {/* Informaci√≥n adicional: Zonas e Idiomas */}
        {(asesorData.zonas.length > 0 || asesorData.idiomas.length > 0) && (
          <div class="asesor-extra-info">
            {asesorData.zonas.length > 0 && (
              <div class="info-block">
                <h3>üìç Zonas de Trabajo</h3>
                <div class="tags-list">
                  {asesorData.zonas.map((zona: string) => (
                    <span class="tag">{zona}</span>
                  ))}
                </div>
              </div>
            )}
            {asesorData.idiomas.length > 0 && (
              <div class="info-block">
                <h3>üåê Idiomas</h3>
                <div class="tags-list">
                  {asesorData.idiomas.map((idioma: string) => (
                    <span class="tag">{idioma}</span>
                  ))}
                </div>
              </div>
