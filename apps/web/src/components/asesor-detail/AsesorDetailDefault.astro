                frameborder="0"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen
              ></iframe>
            </div>
          </div>
        )}

        {/* Propiedades del asesor */}
        {propiedadesAsesor.length > 0 && (
          <div class="asesor-section">
            <h2>üè† Mis Propiedades ({propiedadesAsesor.length})</h2>
            <div class="properties-mini-grid">
              {propiedadesAsesor.slice(0, 6).map((prop: any) => (
                <a href={`${baseUrl}/propiedades/${prop.slug || prop.id}`} class="property-mini-card">
                  <div class="mini-image">
                    {prop.imagen_principal ? (
                      <img src={prop.imagen_principal} alt={prop.titulo} loading="lazy" />
                    ) : (
                      <div class="no-image">üè†</div>
                    )}
                    {prop.operacion && (
                      <span class={`operation-badge ${prop.operacion.toLowerCase()}`}>
                        {prop.operacion}
                      </span>
                    )}
                  </div>
                  <div class="mini-info">
                    <h4>{prop.titulo}</h4>
                    <p class="mini-location">{prop.ciudad || prop.sector}</p>
                    {prop.precio && (
                      <span class="mini-price">{formatCurrency(prop.precio)}</span>
                    )}
                  </div>
                </a>
              ))}
            </div>
            {propiedadesAsesor.length > 6 && (
              <a href={`${baseUrl}/propiedades?asesor=${asesorData.id}`} class="view-all-link">
                Ver todas mis propiedades ({propiedadesAsesor.length}) ‚Üí
              </a>
            )}
          </div>
        )}

        {/* Videos del asesor */}
        {videosAsesor.length > 0 && (
          <div class="asesor-section">
            <h2>üé• Mis Videos ({videosAsesor.length})</h2>
            <div class="content-grid">
              {videosAsesor.slice(0, 4).map((video: any) => (
                <a href={`${baseUrl}/videos/${video.categoria_slug || 'general'}/${video.slug}`} class="content-card">
                  <div class="content-image">
                    {video.thumbnail ? (
                      <img src={video.thumbnail} alt={video.titulo} loading="lazy" />
                    ) : (
                      <div class="no-image">üé¨</div>
                    )}
                    <span class="play-icon">‚ñ∂</span>
                  </div>
                  <div class="content-info">
                    <h4>{video.titulo || video.title}</h4>
                    {video.duracion_segundos && (
                      <span class="duration">
                        {Math.floor(video.duracion_segundos / 60)}:{String(video.duracion_segundos % 60).padStart(2, '0')}
                      </span>
                    )}
                  </div>
                </a>
              ))}
            </div>
          </div>
        )}

        {/* Art√≠culos del asesor */}
        {articulosAsesor.length > 0 && (
          <div class="asesor-section">
            <h2>üìù Mis Art√≠culos ({articulosAsesor.length})</h2>
            <div class="content-grid">
              {articulosAsesor.slice(0, 4).map((articulo: any) => (
                <a href={`${baseUrl}/articulos/${articulo.categoria_slug || 'general'}/${articulo.slug}`} class="content-card">
                  <div class="content-image">
                    {articulo.imagen_principal ? (
                      <img src={articulo.imagen_principal} alt={articulo.titulo} loading="lazy" />
                    ) : (
                      <div class="no-image">üìÑ</div>
                    )}
                  </div>
                  <div class="content-info">
                    <h4>{articulo.titulo || articulo.title}</h4>
                    {articulo.extracto && (
                      <p class="excerpt">{articulo.extracto.substring(0, 100)}...</p>
                    )}
                  </div>
                </a>
              ))}
            </div>
          </div>
        )}

        {/* Testimonios del asesor */}
        {testimoniosAsesor.length > 0 && (
          <div class="asesor-section">
            <h2>üí¨ Lo que dicen mis clientes ({testimoniosAsesor.length})</h2>
            <div class="testimonials-list">
              {testimoniosAsesor.slice(0, 4).map((testimonio: any) => (
                <div class="testimonial-card">
                  <div class="testimonial-header">
                    <div class="client-avatar">
                      {testimonio.cliente_foto || testimonio.foto_url ? (
                        <img src={testimonio.cliente_foto || testimonio.foto_url} alt={testimonio.cliente_nombre || testimonio.nombre_cliente} />
                      ) : (
                        <span>{(testimonio.cliente_nombre || testimonio.nombre_cliente || 'C').charAt(0)}</span>
                      )}
                    </div>
                    <div class="client-info">
                      <strong>{testimonio.cliente_nombre || testimonio.nombre_cliente}</strong>
                      {testimonio.cliente_cargo && <span>{testimonio.cliente_cargo}</span>}
                    </div>
                    {testimonio.rating && (
                      <div class="testimonial-rating">
                        {[1,2,3,4,5].map((star) => (
                          <span class={star <= testimonio.rating ? 'star filled' : 'star'}>‚òÖ</span>
                        ))}
                      </div>
                    )}
                  </div>
                  <p class="testimonial-content">"{testimonio.contenido || testimonio.testimonio}"</p>
                </div>
              ))}
            </div>
          </div>
        )}

        {/* Redes sociales */}
        {asesorData.redes_sociales && Object.keys(asesorData.redes_sociales).length > 0 && (
          <div class="asesor-section social-section">
            <h2>üîó S√≠gueme en redes</h2>
            <div class="social-links">
              {asesorData.redes_sociales.facebook && (
                <a href={asesorData.redes_sociales.facebook} target="_blank" rel="noopener" class="social-link facebook">
                  Facebook
                </a>
              )}
              {asesorData.redes_sociales.instagram && (
                <a href={asesorData.redes_sociales.instagram} target="_blank" rel="noopener" class="social-link instagram">
                  Instagram
                </a>
              )}
              {asesorData.redes_sociales.linkedin && (
                <a href={asesorData.redes_sociales.linkedin} target="_blank" rel="noopener" class="social-link linkedin">
                  LinkedIn
                </a>
              )}
              {asesorData.redes_sociales.youtube && (
                <a href={asesorData.redes_sociales.youtube} target="_blank" rel="noopener" class="social-link youtube">
                  YouTube
                </a>
              )}
              {asesorData.redes_sociales.tiktok && (
                <a href={asesorData.redes_sociales.tiktok} target="_blank" rel="noopener" class="social-link tiktok">
                  TikTok
                </a>
              )}
            </div>
          </div>
        )}

        {/* Volver */}
        <div class="back-link">
          <a href={`${baseUrl}/asesores`}>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="19" y1="12" x2="5" y2="12"></line>
              <polyline points="12 19 5 12 12 5"></polyline>
            </svg>
            Volver a asesores
          </a>
        </div>
      </>
    ) : (
      <div class="not-found">
        <div class="not-found-icon">üë§</div>
        <h1>Asesor no encontrado</h1>
        <p>No pudimos encontrar el asesor que est√°s buscando.</p>
        <a href={`${baseUrl}/asesores`} class="back-btn">Ver todos los asesores</a>
      </div>
    )}
  </div>
</section>

<style>
  .asesor-detail-section {
    padding: 3rem 2rem;
    background: var(--background-color, #f8f9fa);
    min-height: 60vh;
  }

