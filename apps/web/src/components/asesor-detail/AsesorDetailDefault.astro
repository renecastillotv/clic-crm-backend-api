    padding: 1.5rem;
    border-radius: 12px;
    text-align: center;
  }

  .stat-value {
    display: block;
    font-size: 2rem;
    font-weight: 700;
    color: var(--primary);
  }

  .stat-label {
    font-size: 0.85rem;
    color: var(--text-secondary, #718096);
  }

  .asesor-properties {
    background: white;
    padding: 1.5rem;
    border-radius: 12px;
    margin-bottom: 2rem;
  }

  .asesor-properties h2 {
    font-size: 1.25rem;
    margin: 0 0 1rem 0;
  }

  .properties-mini-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 1rem;
  }

  .property-mini-card {
    background: #f8f9fa;
    border-radius: 8px;
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    transition: transform 0.2s;
  }

  .property-mini-card:hover {
    transform: translateY(-2px);
  }

  .mini-image {
    height: 120px;
    background: #e2e8f0;
  }

  .mini-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .mini-image .no-image {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
  }

  .mini-info {
    padding: 0.75rem;
  }

  .mini-info h4 {
    font-size: 0.9rem;
