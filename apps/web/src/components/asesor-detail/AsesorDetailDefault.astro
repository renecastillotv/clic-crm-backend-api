---
/**
 * AsesorDetailDefault.astro
 * Vista detallada de un asesor individual
 * Muestra el perfil completo del asesor con propiedades, art√≠culos, videos y testimonios
 */

interface Props {
  datos?: any;
  asesor?: any;
  tema?: Record<string, string>;
  baseUrl?: string;
}

const { datos, asesor, tema = {}, baseUrl = '' } = Astro.props;

const staticData = datos?.static_data || {};
const toggles = datos?.toggles || {};

// El asesor puede venir desde resolvedData (primary) o desde datos del componente
// El assembler devuelve: { primary: asesor, propiedades: [], testimonios: [], articulos: [], videos: [] }
const resolvedData = datos?.dynamic_data?.resolved;
const rawAsesorData = asesor || datos?.asesor || resolvedData?.primary || (Array.isArray(resolvedData) ? resolvedData[0] : resolvedData);

// Datos secundarios del assembler (propiedades, testimonios, art√≠culos, videos del asesor)
const propiedadesAsesor = resolvedData?.propiedades || datos?.propiedades || rawAsesorData?.propiedades || [];
const testimoniosAsesor = resolvedData?.testimonios || datos?.testimonios || [];
const articulosAsesor = resolvedData?.articulos || datos?.articulos || [];
const videosAsesor = resolvedData?.videos || datos?.videos || [];

// Normalizar datos del asesor para compatibilidad con la vista
const asesorData = rawAsesorData ? {
  ...rawAsesorData,
  // Nombre completo
  nombreCompleto: rawAsesorData.nombre_completo || `${rawAsesorData.nombre || ''} ${rawAsesorData.apellido || ''}`.trim() || 'Asesor',
  // Foto (varios alias posibles)
  foto: rawAsesorData.foto_url || rawAsesorData.foto || rawAsesorData.avatar_url || rawAsesorData.avatar || null,
  // Especialidad (primer elemento del array o valor directo)
  especialidad: Array.isArray(rawAsesorData.especialidades) && rawAsesorData.especialidades.length > 0
    ? rawAsesorData.especialidades.join(', ')
    : (rawAsesorData.especialidad || null),
  // Zonas de trabajo
  zonas: Array.isArray(rawAsesorData.zonas) ? rawAsesorData.zonas : [],
  // Idiomas
  idiomas: Array.isArray(rawAsesorData.idiomas) ? rawAsesorData.idiomas : [],
  // Rating
  rating: rawAsesorData.calificacion_promedio || rawAsesorData.rating || rawAsesorData.stats?.calificacion_promedio || null,
  num_reviews: rawAsesorData.total_resenas || rawAsesorData.num_reviews || rawAsesorData.stats?.total_resenas || null,
  // Propiedades activas
  propiedades_activas: rawAsesorData.propiedades_activas || rawAsesorData.stats?.propiedades_activas || propiedadesAsesor.length || 0,
  propiedades_vendidas: rawAsesorData.propiedades_vendidas || rawAsesorData.stats?.propiedades_vendidas || 0,
  volumen_ventas: rawAsesorData.volumen_ventas || rawAsesorData.stats?.volumen_ventas || 0,
} : null;

// Colores del tema
const primaryColor = tema?.primary || '#667eea';
const secondaryColor = tema?.secondary || '#764ba2';

// Si no hay asesor, mostrar mensaje
const hasAsesor = asesorData && (asesorData.id || asesorData.nombre);

// Formatear moneda
const formatCurrency = (value: number) => {
  if (!value) return null;
  return new Intl.NumberFormat('es-DO', { style: 'currency', currency: 'USD', maximumFractionDigits: 0 }).format(value);
};
---

<section class="asesor-detail-section" style={`--primary: ${primaryColor}; --secondary: ${secondaryColor};`}>
  <div class="asesor-detail-container">
    {hasAsesor ? (
      <>
        {/* Header del asesor */}
        <div class="asesor-header">
          <div class="asesor-avatar-large">
            {asesorData.foto ? (
              <img
                src={asesorData.foto}
                alt={asesorData.nombreCompleto}
              />
            ) : (
              <div class="avatar-placeholder-large">
                <span>{(asesorData.nombreCompleto || 'A').charAt(0).toUpperCase()}</span>
              </div>
            )}
          </div>
          <div class="asesor-header-info">
