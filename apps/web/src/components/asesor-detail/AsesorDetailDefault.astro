              <p class="asesor-cargo">{asesorData.cargo}</p>
            )}
            {asesorData.especialidad && (
              <p class="asesor-specialty">{asesorData.especialidad}</p>
            )}
            {asesorData.rating != null && asesorData.rating > 0 && (
              <div class="asesor-rating">
                <span class="stars">
                  {[1, 2, 3, 4, 5].map((star) => (
                    <span class={`star ${star <= Math.round(asesorData.rating) ? 'filled' : ''}`}>‚òÖ</span>
                  ))}
                </span>
                <span class="rating-value">{Number(asesorData.rating).toFixed(1)}</span>
                {asesorData.num_reviews && (
                  <span class="reviews-count">({asesorData.num_reviews} rese√±as)</span>
