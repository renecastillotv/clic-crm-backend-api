const email = staticData?.email;
const direccion = staticData?.direccion;
const horario = staticData?.horario;
const redesSociales = staticData?.redesSociales || [];

// Toggles
const mostrarTelefono = toggles?.mostrarTelefono ?? true;
const mostrarEmail = toggles?.mostrarEmail ?? true;
const mostrarDireccion = toggles?.mostrarDireccion ?? true;
const mostrarHorario = toggles?.mostrarHorario ?? true;
const mostrarRedesSociales = toggles?.mostrarRedesSociales ?? true;

