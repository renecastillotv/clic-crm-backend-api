  datos?: any;
  tema?: Record<string, string>;
  baseUrl?: string;
  tipoPagina?: string;
}

const { datos, tema = {}, baseUrl = '', tipoPagina = '' } = Astro.props;

const staticData = datos?.static_data || {};
