---
/**
 * KnowledgeCenterGrid - Centro de conocimiento con art√≠culos
 * Muestra categor√≠as y art√≠culos recientes del blog
 */

interface Props {
  datos: {
    static_data: {
      titulo: string;
      subtitulo?: string;
      categorias?: Array<{
        nombre: string;
        icono: string;
        url: string;
      }>;
    };
    dynamic_data?: {
      resolved?: Array<any>;
    };
    toggles?: {
      mostrarCategorias?: boolean;
    };
  };
  tema?: Record<string, string>;
  baseUrl?: string;
}

const { datos, tema = {}, baseUrl = '' } = Astro.props;
const { static_data, dynamic_data, toggles = {} } = datos;
const { titulo, subtitulo, categorias = [] } = static_data;
const articulos = dynamic_data?.resolved || [];
const { mostrarCategorias = true } = toggles;

const primaryColor = tema.primary || '#f04e00';
const secondaryColor = tema.secondary || '#1a1a1a';
---

<section class="knowledge-center">
  <div class="container">
    <div class="header">
      <h2 class="title">{titulo}</h2>
      {subtitulo && <p class="subtitle">{subtitulo}</p>}
    </div>

    {mostrarCategorias && categorias.length > 0 && (
      <div class="categories">
        {categorias.map((categoria) => (
          <a href={categoria.url} class="category-card">
            <span class="category-icon">{categoria.icono}</span>
            <span class="category-name">{categoria.nombre}</span>
          </a>
        ))}
      </div>
    )}

    {articulos.length > 0 ? (
      <div class="articles-grid">
        {articulos.map((articulo: any) => (
          <a href={`${baseUrl}${articulo.url || `/articulos/${articulo.slug}`}`} class="article-card">
            {articulo.imagen && (
              <div class="article-image">
                <img src={articulo.imagen} alt={articulo.titulo || articulo.title} />
              </div>
            )}
            <div class="article-content">
              {articulo.categoria && (
                <span class="article-category">{articulo.categoria}</span>
              )}
              <h3 class="article-title">{articulo.titulo || articulo.title}</h3>
              {articulo.extracto && (
                <p class="article-excerpt">{articulo.extracto}</p>
              )}
              {articulo.fecha_publicacion && (
                <time class="article-date">
                  {new Date(articulo.fecha_publicacion).toLocaleDateString('es-ES', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric',
                  })}
                </time>
              )}
            </div>
          </a>
        ))}
      </div>
    ) : (
      <div class="empty-state">
        <div class="empty-icon">üìö</div>
        <p>Pronto publicaremos contenido educativo para ayudarte en tu proceso de compra o venta.</p>
      </div>
    )}

    <div class="cta-section">
      <a href="/blog" class="view-all-btn">Ver todos los art√≠culos</a>
    </div>
  </div>
</section>

<style define:vars={{ primaryColor, secondaryColor }}>
  .knowledge-center {
    padding: 5rem 0;
    background: #f9fafb;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .header {
    text-align: center;
    margin-bottom: 3.5rem;
  }

  .title {
    font-size: 2.25rem;
    font-weight: 700;
    color: var(--secondaryColor);
    margin: 0 0 0.75rem 0;
    letter-spacing: -0.02em;
  }

  .subtitle {
    font-size: 1.125rem;
    color: #6b7280;
    line-height: 1.6;
  }

  .categories {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  .category-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.5rem;
    background: white;
    border-radius: 12px;
    text-decoration: none;
    color: inherit;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    transition: all 0.3s;
  }

  .category-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.12);
  }

  .category-icon {
    font-size: 2.5rem;
  }

  .category-name {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--secondaryColor);
  }

  .articles-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .article-card {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    transition: all 0.3s;
  }

  .article-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.12);
  }

  .article-image {
    aspect-ratio: 16 / 9;
    overflow: hidden;
  }

  .article-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s;
  }

  .article-card:hover .article-image img {
    transform: scale(1.1);
  }

  .article-content {
    padding: 1.5rem;
  }

  .article-category {
    display: inline-block;
    padding: 0.375rem 0.75rem;
    background: rgba(240, 78, 0, 0.1);
    color: var(--primaryColor);
    border-radius: 20px;
    font-size: 0.875rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
  }

  .article-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0 0 0.75rem 0;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .article-excerpt {
    font-size: 0.95rem;
    color: #6b7280;
    margin: 0 0 1rem 0;
    line-height: 1.6;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .article-date {
    font-size: 0.875rem;
    color: #9ca3af;
  }

  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    color: #6b7280;
  }

  .empty-icon {
    font-size: 4rem;
    margin-bottom: 1rem;
  }

  .cta-section {
    text-align: center;
  }

  .view-all-btn {
    display: inline-block;
    padding: 1rem 2.5rem;
    background: var(--primaryColor);
    color: white;
    text-decoration: none;
    border-radius: 8px;
    font-weight: 600;
    font-size: 1.125rem;
    transition: all 0.3s;
    box-shadow: 0 4px 12px rgba(240, 78, 0, 0.3);
  }

  .view-all-btn:hover {
    background: color-mix(in srgb, var(--primaryColor) 85%, black);
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(240, 78, 0, 0.4);
  }

  @media (max-width: 968px) {
    .articles-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .categories {
      grid-template-columns: 1fr;
    }

    .title {
      font-size: 2rem;
    }
  }

  @media (max-width: 640px) {
    .knowledge-center {
      padding: 3rem 0;
    }

    .articles-grid {
      grid-template-columns: 1fr;
    }

    .title {
      font-size: 1.75rem;
    }

    .subtitle {
      font-size: 1rem;
    }

    .view-all-btn {
      width: 100%;
    }
  }
</style>
