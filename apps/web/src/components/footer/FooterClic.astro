---
/**
 * FooterClic.astro
 * Footer estilo CLIC Inmobiliaria - Layout limpio
 */

import type { ComponenteDataEstructurado } from '../../types/componentesEstructurado';

interface Props {
  datos: ComponenteDataEstructurado;
  tema?: Record<string, string>;
  baseUrl?: string;
}

interface Enlace { texto: string; url: string; }
interface Columna { titulo: string; enlaces: Enlace[]; }

const { datos, tema = {}, baseUrl = '' } = Astro.props;

const staticData = datos?.static_data || {};
const styles = datos?.styles || {};
const toggles = datos?.toggles || {};

// Datos
const descripcion = staticData.descripcion || 'CLIC Inmobiliaria es la plataforma líder de bienes raíces en República Dominicana, fundada por René Castillo.';
const telefono = staticData.telefono || '+1 809 514 8080';
const email = staticData.email || 'info@clicinmobiliaria.com';
const direccion = staticData.direccion || 'Av. Winston Churchill, Santo Domingo, RD';
const horario = staticData.horario || 'Lun-Vie: 9:00 AM - 6:00 PM';
const firmaRene = staticData.firmaRene || '';
const copyright = staticData.copyright || '© 2024 CLIC DOM SRL. Todos los derechos reservados.';

const columnasDefault: Columna[] = [
  {
    titulo: 'Propiedades',
    enlaces: [
      { texto: 'Casas en Venta', url: '/propiedades?tipo=casa&operacion=venta' },
      { texto: 'Apartamentos', url: '/propiedades?tipo=apartamento' },
      { texto: 'Locales Comerciales', url: '/propiedades?tipo=local' },
      { texto: 'Proyectos Nuevos', url: '/proyectos' }
    ]
  },
  {
    titulo: 'Servicios',
    enlaces: [
      { texto: 'Vender tu Propiedad', url: '/vender' },
      { texto: 'Asesoría Legal', url: '/servicios/legal' },
      { texto: 'Inversiones', url: '/inversiones' },
      { texto: 'Propuestas Personalizadas', url: '/propuestas' }
    ]
  },
  {
    titulo: 'Recursos',
    enlaces: [
      { texto: 'Artículos', url: '/articulos' },
      { texto: 'Videos', url: '/videos' },
      { texto: 'Preguntas Frecuentes', url: '/faqs' },
      { texto: 'Contáctanos', url: '/contacto' }
    ]
  }
];
const columnas: Columna[] = Array.isArray(staticData.columnas) ? staticData.columnas : columnasDefault;

const redesSociales = staticData.redesSociales || {
  youtube: 'https://www.youtube.com/@CLICinmobiliaria',
  instagram: 'https://www.instagram.com/clicinmobiliaria/',
  linkedin: 'https://www.linkedin.com/company/clic-inmobiliaria/',
  tiktok: 'https://www.tiktok.com/@clicinmobiliaria'
};

const mostrarFirma = toggles.mostrarFirma !== false && firmaRene;

// === COLORES CONFIGURABLES ===
// Todos los colores vienen de styles o tema, con valores por defecto de CLIC
const colorPrimario = styles.colorPrimario || tema.primary || '#f04e00';
const colorFondo = styles.colorFondo || tema.backgroundDark || '#111827';
const colorTexto = styles.colorTexto || tema.textOnDark || '#ffffff';
const colorTextoSecondary = styles.colorTextoSecondary || tema.textSecondaryOnDark || '#9ca3af';
const colorTextoTertiary = styles.colorTextoTertiary || '#6b7280';
const colorTextoQuaternary = styles.colorTextoQuaternary || '#d1d5db';
const colorBorde = styles.colorBorde || tema.borderDark || '#374151';
const colorSocialBg = styles.colorSocialBg || '#1f2937';
const colorSocialHover = styles.colorSocialHover || colorPrimario;
---

<footer 
  class="footer-clic" 
  style={`
    --fc-accent: ${colorPrimario};
    --fc-bg: ${colorFondo};
    --fc-text: ${colorTexto};
    --fc-text-secondary: ${colorTextoSecondary};
    --fc-text-tertiary: ${colorTextoTertiary};
    --fc-text-quaternary: ${colorTextoQuaternary};
    --fc-border: ${colorBorde};
    --fc-social-bg: ${colorSocialBg};
    --fc-social-hover: ${colorSocialHover};
  `}
>
  <div class="footer-container">
    <!-- Fila superior: Logo/Descripción + Columnas -->
    <div class="footer-top">
      <!-- Columna de marca -->
      <div class="footer-brand-col">
        <h3 class="footer-title">CLIC Inmobiliaria</h3>
        <p class="footer-desc">{descripcion}</p>

        {mostrarFirma && (
          <img src={firmaRene} alt="Firma de René Castillo" class="footer-signature" loading="lazy" />
        )}
      </div>

      <!-- Columnas de enlaces -->
      {columnas.map((col) => (
        <div class="footer-links-col">
          <h4 class="footer-col-title">{col.titulo}</h4>
          <ul class="footer-links">
            {col.enlaces.map((link) => (
              <li>
                <a href={link.url.startsWith('/') ? baseUrl + link.url : link.url}>
                  {link.texto}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <!-- Fila de contacto -->
    <div class="footer-contact-row">
      <div class="contact-block">
        <svg class="contact-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
          <circle cx="12" cy="10" r="3"/>
        </svg>
        <div class="contact-info">
          <span class="contact-label">Oficina Principal</span>
          <span class="contact-text">{direccion}</span>
        </div>
      </div>

      <div class="contact-block">
        <svg class="contact-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
          <line x1="16" y1="2" x2="16" y2="6"/>
          <line x1="8" y1="2" x2="8" y2="6"/>
          <line x1="3" y1="10" x2="21" y2="10"/>
        </svg>
        <div class="contact-info">
          <span class="contact-label">Horario</span>
          <span class="contact-text">{horario}</span>
        </div>
      </div>

      <div class="contact-block">
        <svg class="contact-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
        </svg>
        <div class="contact-info">
          <span class="contact-label">Teléfono</span>
          <a href={`tel:${telefono.replace(/\s/g, '')}`} class="contact-link">{telefono}</a>
        </div>
      </div>

      <div class="contact-block">
        <svg class="contact-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
          <polyline points="22,6 12,13 2,6"/>
        </svg>
        <div class="contact-info">
          <span class="contact-label">Email</span>
          <a href={`mailto:${email}`} class="contact-link">{email}</a>
        </div>
      </div>
    </div>

    <!-- Fila inferior: Redes + Copyright -->
    <div class="footer-bottom">
      <div class="footer-social">
        {redesSociales.youtube && (
          <a href={redesSociales.youtube} target="_blank" rel="noopener" title="YouTube" class="social-btn">
            <svg viewBox="0 0 24 24" fill="currentColor"><path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/></svg>
          </a>
        )}
        {redesSociales.instagram && (
          <a href={redesSociales.instagram} target="_blank" rel="noopener" title="Instagram" class="social-btn">
            <svg viewBox="0 0 24 24" fill="currentColor"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
          </a>
        )}
        {redesSociales.linkedin && (
          <a href={redesSociales.linkedin} target="_blank" rel="noopener" title="LinkedIn" class="social-btn">
            <svg viewBox="0 0 24 24" fill="currentColor"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
          </a>
        )}
        {redesSociales.tiktok && (
          <a href={redesSociales.tiktok} target="_blank" rel="noopener" title="TikTok" class="social-btn">
            <svg viewBox="0 0 24 24" fill="currentColor"><path d="M12.525.02c1.31-.02 2.61-.01 3.91-.02.08 1.53.63 3.09 1.75 4.17 1.12 1.11 2.7 1.62 4.24 1.79v4.03c-1.44-.05-2.89-.35-4.2-.97-.57-.26-1.1-.59-1.62-.93-.01 2.92.01 5.84-.02 8.75-.08 1.4-.54 2.79-1.35 3.94-1.31 1.92-3.58 3.17-5.91 3.21-1.43.08-2.86-.31-4.08-1.03-2.02-1.19-3.44-3.37-3.65-5.71-.02-.5-.03-1-.01-1.49.18-1.9 1.12-3.72 2.58-4.96 1.66-1.44 3.98-2.13 6.15-1.72.02 1.48-.04 2.96-.04 4.44-.99-.32-2.15-.23-3.02.37-.63.41-1.11 1.04-1.36 1.75-.21.51-.15 1.07-.14 1.61.24 1.64 1.82 3.02 3.5 2.87 1.12-.01 2.19-.66 2.77-1.61.19-.33.4-.67.41-1.06.1-1.79.06-3.57.07-5.36.01-4.03-.01-8.05.02-12.07z"/></svg>
          </a>
        )}
      </div>

      <p class="footer-copyright">{copyright}</p>
    </div>
  </div>
</footer>

<style>
  .footer-clic {
    background: var(--fc-bg);
    color: var(--fc-text);
    font-family: Inter, ui-sans-serif, system-ui, -apple-system, sans-serif;
    width: 100%;
  }

  .footer-container {
    max-width: 1600px;
    margin: 0 auto;
    padding: 4rem 3rem 2.5rem;
  }

  /* Top row: Brand + Link columns */
  .footer-top {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2.5rem;
    padding-bottom: 2.5rem;
    border-bottom: 1px solid var(--fc-border);
  }

  @media (min-width: 768px) {
    .footer-top {
      grid-template-columns: 1.5fr repeat(3, 1fr);
      gap: 3rem;
    }
  }

  .footer-brand-col {
    max-width: 320px;
  }

  .footer-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0 0 1rem 0;
    color: var(--fc-text);
  }

  .footer-desc {
    font-size: 1.0625rem;
    color: var(--fc-text-secondary);
    line-height: 1.7;
    margin: 0 0 1.25rem 0;
  }

  .footer-signature {
    height: 3rem;
    width: auto;
    opacity: 0.85;
  }

  .footer-links-col h4,
  .footer-col-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--fc-text);
    margin: 0 0 1rem 0;
  }

  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.625rem;
  }

  .footer-links a {
    font-size: 1.0625rem;
    color: var(--fc-text-secondary);
    text-decoration: none;
    transition: color 0.15s;
  }

  .footer-links a:hover {
    color: var(--fc-accent);
  }

  /* Contact row */
  .footer-contact-row {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.25rem;
    padding: 1.5rem 0;
    border-bottom: 1px solid var(--fc-border);
  }

  @media (min-width: 640px) {
    .footer-contact-row {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .footer-contact-row {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .contact-block {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
  }

  .contact-icon {
    width: 1.25rem;
    height: 1.25rem;
    color: var(--fc-accent);
    flex-shrink: 0;
    margin-top: 2px;
  }

  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
  }

  .contact-label {
    font-size: 0.75rem;
    color: var(--fc-text-tertiary);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .contact-text {
    font-size: 0.9375rem;
    color: var(--fc-text-quaternary);
  }

  .contact-link {
    font-size: 0.9375rem;
    color: var(--fc-text-quaternary);
    text-decoration: none;
    transition: color 0.15s;
  }

  .contact-link:hover {
    color: var(--fc-accent);
  }

  /* Bottom row */
  .footer-bottom {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    padding-top: 1.5rem;
  }

  @media (min-width: 640px) {
    .footer-bottom {
      flex-direction: row;
      justify-content: space-between;
    }
  }

  .footer-social {
    display: flex;
    gap: 0.75rem;
  }

  .social-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.25rem;
    height: 2.25rem;
    background: var(--fc-social-bg);
    border-radius: 0.5rem;
    color: var(--fc-text-secondary);
    transition: background 0.15s, color 0.15s;
  }

  .social-btn:hover {
    background: var(--fc-social-hover);
    color: var(--fc-text);
  }

  .social-btn svg {
    width: 1.125rem;
    height: 1.125rem;
  }

  .footer-copyright {
    font-size: 0.8125rem;
    color: var(--fc-text-tertiary);
    margin: 0;
  }
</style>
